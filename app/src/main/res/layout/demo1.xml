        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:text="About"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/About"
        android:textSize="20dp"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/ShowInFor"
        android:layout_width="match_parent"
